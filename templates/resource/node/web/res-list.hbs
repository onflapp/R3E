<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="user-scalable=no,width=device-width, initial-scale=1.0">
  <link rel="icon" href="data:;base64,iVBORw0KGgo=">
  
  <style>
  table {
    width: 100%;
  }

  table td {
    border: 1px solid gray;
  }
  </style>

  <title>list</title>
</head>

<body>
  <ol>
    <li><a href="{{req_path "/"}}">HOME</a></li>
{{#include "." "parents"}}
    <li><a href="{{req_path path}}">{{name}}</a></li>
{{/include}}
    <li class="active">{{name}}</li>
  </ol>

  <div>
    <a href="{{req_path "." "res-create"}}">n</a>
    <a href="{{req_path "." "res-renderer"}}">r</a>
    <a href="{{req_path "." "res-properties"}}">p</a>
    <a href="{{req_path "." "context"}}">x</a>
{{#if renderType}}
    <a target="_blank" href="{{req_path "."}}">Render As "{{renderType}}"</a>
{{/if}}
  </div>

  <table>
{{#include "." "properties"}}
    <tr>
      <td>
        {{name}}
      </td>
      <td>
        {{value}}
      </td>
    </tr>
{{/include}}
  </table>

  <table>
{{#include "." "children"}}
  {{#if isContentResource}}
    <tr>
      <td>
        <a href="{{req_path path "edit"}}">{{name}}</a>
      </td>
      <td>
        {{contentType}} ({{contentSize}})
      </td>
      <td>
        {{include path "res-list-actions"}}
      </td>
    </tr>
  {{else}}
    <tr>
      <td>
        <a href="{{req_path path}}">{{name}}</a>
      </td>
      <td>
    {{#if renderType}}
        <a href="{{req_path C.USER_TEMPLATES "/" renderType "res-list"}}">{{renderType}}</a>
    {{else}}
        {{type}}
    {{/if}}
        <a href="{{req_path path "res-renderer"}}">renderer</a>
      </td>
      <td>
        {{include path "res-list-actions"}}
      </td>
    </tr>
  {{/if}}
{{/include}}
  </table>
</body>

</html>
