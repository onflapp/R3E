<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="icon" href="data:;base64,iVBORw0KGgo=">

  <title>copy to</title>

  <link href="{{C.BOOTSTRAP_CSS}}" rel="stylesheet">
</head>

<body>

  <div role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <a class="close" href="{{R.PATH_APPEND}}../{{C.X}}res-list"><span aria-hidden="true">&times;</span></a>
          <h4 class="modal-title">Copy Resource</h4>
        </div>
        <div class="modal-body">

          <h1>Copy from</h1>

          <ol class="breadcrumb">
            <li class="active">HOME</li>
            {{#include "." "parents"}}
              <li class="active">{{name}}</li>
            {{/include}}
            <li>{{R.NAME}}</li>
          </ol>

          <h1>to</h1>

          <ol class="breadcrumb">
            <li><a href="{{R.PATH}}{{C.X}}res-copyto/">HOME</a></li>
            {{#include R.DATA_PATH "parents"}}
              <li><a href="{{R.PATH}}{{C.X}}res-copyto{{path}}">{{name}}</a></li>
            {{/include}}
            <li class="active">{{R.DATA_NAME}}</li>
          </ol>

          <form method="post" action="{{R.PATH}}">
            <table class="table">
              {{#include R.DATA_PATH "children"}}
                {{#if isContentResource}}
                  <tr>
                    <td>
                      <i class="glyphicon glyphicon-file"></i> {{name}}
                    </td>
                  </tr>
                {{else}}
                  <tr>
                    {{#match path "!startsWith" R.PATH}}
                      <td>
                        <i class="glyphicon glyphicon-folder-close"></i> <a href="{{R.PATH}}{{C.X}}res-copyto{{path}}">{{name}}</a>
                      </td>
                    {{/match}}
                  </tr>
                {{/if}}

              {{/include}}
              <tr>
                <td>
                  <input class="form-control" name=":name|newUUID" value="Copy of {{R.NAME}}" autocorrect="off" autocapitalize="off" autocomplete="off" spellcheck="false">
                </td>
              </tr>

            </table>

            <input type="hidden" name=":copyto" value="{{R.DATA_PATH_APPEND}}{:name}">
            <input type="hidden" name=":forward" value="{{R.DATA_PATH}}{{C.X}}res-list">

            <div class="modal-footer">
              <div class="pull-left">
                <a class="btn btn-default" target="_blank" href="{{R.PATH}}{{C.X}}export">Export</a>
                <a class="btn btn-default" target="_blank" href="{{R.PATH}}{{C.X}}res-exportto{{R.DATA_PATH}}">Export to...</a>
              </div>
              <a class="btn btn-default" href="{{R.PATH_APPEND}}../{{C.X}}res-list">Cancel</a>
              <input class="btn btn-success" type="submit" value="Copy">
            </div>

          </form>
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

</body>

</html>
