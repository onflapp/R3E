<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="icon" href="data:;base64,iVBORw0KGgo=">

  <title>move to</title>

  <link href="{{C.BOOTSTRAP_CSS}}" rel="stylesheet">
</head>

<body>
  <div role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <a class="close" href="{{C.P}}{{R.PATH_APPEND}}../{{C.X}}res-list"><span aria-hidden="true">&times;</span></a>
          <h4 class="modal-title">Move or Rename Resource</h4>
        </div>
        <div class="modal-body">

          <h1>Move from</h1>

          <ol class="breadcrumb">
            <li class="active">HOME</li>
            {{#include "." "parents"}}
              <li class="active">{{name}}</li>
            {{/include}}
            <li>{{R.NAME}}</li>
          </ol>

          <h1>to</h1>

          <ol class="breadcrumb">
            <li><a href="{{C.P}}{{R.PATH}}{{C.X}}res-moveto/">HOME</a></li>
            {{#include R.DATA_PATH "parents"}}
              <li><a href="{{C.P}}{{R.PATH}}{{C.X}}res-moveto{{path}}">{{name}}</a></li>
            {{/include}}
            <li class="active">{{R.DATA_NAME}}</li>
          </ol>

          <form method="post" action="{{C.P}}{{R.PATH}}">

            <table class="table">
              {{#include R.DATA_PATH "children"}}
                {{#if isContentResource}}
                  <tr>
                    <td>
                      <i class="glyphicon glyphicon-file"></i> {{name}}
                    </td>
                  </tr>
                {{else}}
                  <tr>
                    {{#match path "!startsWith" R.PATH}}
                      <td>
                        <i class="glyphicon glyphicon-folder-close"></i> <a href="{{C.P}}{{R.PATH}}{{C.X}}res-moveto{{path}}">{{name}}</a>
                      </td>
                    {{/match}}
                  </tr>
                {{/if}}

              {{/include}}
              <tr>
                <td>
                  <input class="form-control" name=":name|newUUID" value="{{C.P}}{{R.NAME}}" autocomplete="off">
                </td>
              </tr>
            </table>


            <div class="modal-footer">
              <input type="hidden" name=":moveto" value="{{R.DATA_PATH_APPEND}}{:name}">
              <input type="hidden" name=":forward" value="{{C.P}}{{R.DATA_PATH}}{{C.X}}res-list">
              <a class="btn btn-default" href="{{C.P}}{{R.PATH_APPEND}}../{{C.X}}res-list">Cancel</a>
              <input class="btn btn-success" type="submit" value="Move">
            </div>

          </form>
        </div><!-- /.modal-content -->
      </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->


</body>

</html>
